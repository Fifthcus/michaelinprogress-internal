generator client {
  provider = "prisma-client-js"
  output   = "../blogPrismaClient"
}

datasource db {
  provider = "postgresql"
  url      = env("BLOG_DATABASE_URL")
}

model article {
  id      String    @id @default(uuid())
  title   String
  description   String
  thumbnailUrl String
  published DateTime @default(now())
  updated DateTime @updatedAt
  content String
}
